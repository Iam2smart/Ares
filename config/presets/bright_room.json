{
  "name": "Bright Room",
  "description": "Enhanced brightness and contrast for ambient light viewing",
  "processing": {
    "tone_mapping": {
      "algorithm": "hable",
      "target_nits": 150,
      "source_nits": 1000,
      "contrast": 1.3,
      "saturation": 1.1
    },
    "nls": {
      "enabled": false,
      "strength": 0.3,
      "adapt_speed": 0.5
    },
    "black_bars": {
      "enabled": true,
      "threshold": 20,
      "min_content_height": 0.5
    }
  }
}
